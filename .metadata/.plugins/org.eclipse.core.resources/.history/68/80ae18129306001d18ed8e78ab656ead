package com.demo;

import java.util.ArrayList;
import java.util.List;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.cfg.Configuration;

import com.keys.many.Employee;

public class ManyToMany {

	public static void main(String[] args) {
		SessionFactory factory = new Configuration().configure("hibernate.cfg.xml").buildSessionFactory();

		Employee emp = new Employee();
		Employee emp1 = new Employee();
		emp.setEmpname("Vipul");
		emp.setCity("Pune");

		emp1.setEmpname("Uday");
		emp1.setCity("Jalgaon");

		Department dept = new Department();
		Department dept1 = new Department();
		dept.setDeptname("Devloper");
		dept1.setDeptname("Designer");
		emp.setDept(dept);
		emp1.setDept(dept1);

		Project prj = new Project();
		Project prj1 = new Project();
		prj.setPname("School Management System");
		prj1.setPname("Hospital Management System");
		
		

		List<Employee> elist = new ArrayList<>();
		List<Project> plist = new ArrayList<>();

		elist.add(emp);
		elist.add(emp1);

		plist.add(prj);
		plist.add(prj1);

		emp.setProject(plist);
		prj1.setEmp(elist);

		Session session = factory.openSession();
		session.beginTransaction();
		
		session.save(emp);
		session.save(emp1);
		session.save(prj);
		session.save(prj1);
		session.save(dept);
		session.save(dept1);
		
		session.getTransaction().commit();
		session.close();
		
	}

}
